%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%CONTEXT
foo = #{ 'class' : 'fooCLASS' }
bar = #{ 'class' : 'barCLASS' }
# ------------------------------------------------------------
%INPUT
<div th:object="${bar}">
  <div th:object="${foo}" th:remove="tag">
    <span th:text="*{class}">...</span>
  </div>
</div>
# ------------------------------------------------------------
%OUTPUT
<div>
  <span>fooCLASS</span>
</div>