# modify immutable markup, and should therefore raise an exception
<section>
  <div markup:replacebody="...">
    <p>Hello!</p>
  </div>
</section>
# ------------------------------------------------------------
%OUTPUT
<section>
  <div><p>This is a <span>replacement</span></p></div>
</section>
