%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%CONTEXT
var = 10
# ------------------------------------------------------------
%INPUT
<script th:inline="text">
  [[|${var} is &gt; \'9\'|]]
</script>
# ------------------------------------------------------------
%OUTPUT
# We are testing here that in TEXT mode that &gt; will be
# unescaped but \' won't
<script>
  10 is &gt; \&#39;9\&#39;
</script>
