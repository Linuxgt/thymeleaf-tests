%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%INPUT
<div>
  <p>This is some text before</p>
  <div th:substituteby="templates/template-1 (msg='Message for you!')">...</div>
  <p>This is some text after</p>
</div>
# ------------------------------------------------------------
%INPUT[templates/template-1]
<footer>
  <p th:text="${msg}">Here goes the message</p>
</footer>
# ------------------------------------------------------------
%OUTPUT
<div>
  <p>This is some text before</p>
  <footer>
    <p>Message for you!</p>
  </footer>
  <p>This is some text after</p>
</div>

