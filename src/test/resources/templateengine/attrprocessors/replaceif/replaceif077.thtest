%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<title>main</title>
<span th:replace-if="fragg">...</span>
# ------------------------------------------------------------
%INPUT[fragg]
<div th:with="tit=~{:://title}" th:remove="tag">
  <div th:replace-if="frag::f (title=${tit})">...</div>
</div>
# ------------------------------------------------------------
%INPUT[frag]
<div th:fragment="f" class="a">
    <title>inner</title><div th:replace-if="${title}"></div>
</div>
# ------------------------------------------------------------
%OUTPUT
<title>main</title>

<div class="a">
    <title>inner</title><title>main</title>
</div>

