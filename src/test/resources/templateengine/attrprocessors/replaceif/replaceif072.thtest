%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<title>main</title>
<span th:replace-if="fragg">...</span>
# ------------------------------------------------------------
%INPUT[fragg]
<title>hey</title>
<div th:replace-if="frag::f (title=~{:://title})">...</div>
# ------------------------------------------------------------
%INPUT[frag]
<title>inner</title>
<div th:fragment="f" class="a">
    <div th:replace-if="${title}"></div>
</div>
# ------------------------------------------------------------
%OUTPUT
<title>main</title>
<title>hey</title>
<div class="a">
    <title>hey</title>
</div>
