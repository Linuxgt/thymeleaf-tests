%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<div th:replace-if="frag(cond=false,a=~{::title.a},b=~{::title.b})">
  <title class="a">A title</title>
  <title class="b">B title</title>
</div>
# ------------------------------------------------------------
%INPUT[frag]
<span th:replace-if="${cond} ? ${a} : ${b}">...</span>
# ------------------------------------------------------------
%OUTPUT
<title class="b">B title</title>