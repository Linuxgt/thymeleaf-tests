%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<title>main</title>
<span th:replace-if="fragg">...</span>
# ------------------------------------------------------------
%INPUT[fragg]
<div th:replace-if="frag::f (title=~{fragi:://title})">...</div>
# ------------------------------------------------------------
%INPUT[frag]
<div th:fragment="f" class="a">
    <title>inner</title><div th:replace-if="${title}"></div>
</div>
# ------------------------------------------------------------
%INPUT[fragi]
<div><p th:fragment="title">lululu
# ------------------------------------------------------------
%OUTPUT
<title>main</title>
<div class="a">
    <title>inner</title><p>lululu
</div>
