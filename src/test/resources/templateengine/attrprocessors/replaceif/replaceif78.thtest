%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%CONTEXT
tn = 'frag'
fn = 'f'
sel = '::/title'
# ------------------------------------------------------------
%INPUT
<title>main</title>
<span th:replace-if="fragg">...</span>
# ------------------------------------------------------------
%INPUT[fragg]
<title>hey</title>
<div th:replace-if="${tn}::${fn} (title=~{__${sel}__})">...</div>
# ------------------------------------------------------------
%INPUT[frag]
<title>inner</title>
<div th:fragment="f" class="a">
    <div th:replace-if="${title}"></div>
</div>
# ------------------------------------------------------------
%OUTPUT
<title>main</title>
<title>hey</title>
<div class="a">
    <title>hey</title>
</div>
