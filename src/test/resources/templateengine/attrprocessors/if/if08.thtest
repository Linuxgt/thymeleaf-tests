%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%CONTEXT
user = #{ 'age': 24 }
# ------------------------------------------------------------
%INPUT
Text before
<div th:if="${user.age > 24}" th:remove="tag"> 
    Bigger 01
</div>
<div th:if="${user.age} > 24" th:remove="body"> 
    Bigger 02
</div>
<div th:if="${user.age} > 24.0" th:remove="all"> 
    Bigger 03
</div>
<div th:if="${user.age >= 24}" th:remove="tag"> 
    Or equal 01
</div>
<div th:if="${user.age} >= 24" th:remove="body"> 
    Or equal 02
</div>
<div th:if="${user.age} >= 24.0" th:remove="all"> 
    Or equal 03
</div>
Text after 
# ------------------------------------------------------------
%OUTPUT
Text before
    Or equal 01
<div></div>
Text after 
