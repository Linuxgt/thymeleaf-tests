%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%INPUT
<div th:with="index=0">
    <p>This is some text</p>
    <div th:insert="frag::f">...</div>
</div>
# ------------------------------------------------------------
%INPUT[frag]
<div th:fragment="f" class="a">
    <div th:with="index=(${index}+1)">
        <p>before<span th:text="${index}"></span></p>
        <div th:if="${index &lt; 3}" th:insert="this :: f">...</div>
        <p>after</p>
    </div>
</div>
# ------------------------------------------------------------
%OUTPUT
<div>
    <p>This is some text</p>
    <div><div class="a">
        <div>
            <p>before<span>1</span></p>
            <div><div class="a">
                <div>
                    <p>before<span>2</span></p>
                    <div><div class="a">
                        <div>
                            <p>before<span>3</span></p>

                            <p>after</p>
                        </div>
                    </div></div>
                    <p>after</p>
                </div>
            </div></div>
            <p>after</p>
        </div>
    </div></div>
</div>