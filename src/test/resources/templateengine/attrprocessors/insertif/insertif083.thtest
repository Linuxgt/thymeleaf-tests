%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%EXACT_MATCH true
# ------------------------------------------------------------
%CONTEXT
name = 'John Apricot'
# ------------------------------------------------------------
%INPUT
...
<div th:insert-if="frag :: fa (${name})" class="a"></div>
...
# ------------------------------------------------------------
%INPUT[frag]
<div>
  <span th:fragment="f (thename)">Hello [[${thename}]]!</span>
</div>
# ------------------------------------------------------------
%OUTPUT
...
<div class="a"></div>
...
