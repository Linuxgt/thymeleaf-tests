%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<title>main</title>
<span th:insert-if="fragg">...</span>
# ------------------------------------------------------------
%INPUT[fragg]
<title>hey</title>
<div th:insert-if="frag::f (title=~{:://title})">...</div>
# ------------------------------------------------------------
%INPUT[frag]
<div th:fragment="f" class="a">
    <title>inner</title><div th:insert-if="${title}"></div>
</div>
# ------------------------------------------------------------
%OUTPUT
<title>main</title>
<span><title>hey</title>
<div><div class="a">
    <title>inner</title><div><title>hey</title></div>
</div></div></span>
