%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<div th:insert-if="frag(cond=false,a=~{::title.a},b=~{::title.b})">
  <title class="a">A title</title>
  <title class="b">B title</title>
</div>
# ------------------------------------------------------------
%INPUT[frag]
<span th:insert-if="${cond} ? ${a} : ${b}">...</span>
# ------------------------------------------------------------
%OUTPUT
<div><span><title class="b">B title</title></span></div>