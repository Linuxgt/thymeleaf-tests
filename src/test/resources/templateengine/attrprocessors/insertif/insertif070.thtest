%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<span th:insert-if="fragg">...</span>
# ------------------------------------------------------------
%INPUT[fragg]
<title>hey</title>
<div th:insert-if="frag::f (title=~{:://title})">...</div>
# ------------------------------------------------------------
%INPUT[frag]
<div th:fragment="f" class="a">
    <div th:insert-if="${title}"></div>
</div>
# ------------------------------------------------------------
%OUTPUT
<span><title>hey</title>
<div><div class="a">
    <div><title>hey</title></div>
</div></div></span>
