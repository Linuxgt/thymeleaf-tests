%TEMPLATE_MODE HTML
# ------------------------------------------------------------
%INPUT
<title>main</title>
<span th:replace="fragg">...</span>
# ------------------------------------------------------------
%INPUT[fragg]
<div th:replace="frag::f (title=~{:://title})">...</div>
# ------------------------------------------------------------
%INPUT[frag]
<div th:fragment="f" class="a">
    <title>inner</title><div th:replace="${title}"></div>
</div>
# ------------------------------------------------------------
%OUTPUT
<title>main</title>
<div class="a">
    <title>inner</title><title>main</title>
</div>
