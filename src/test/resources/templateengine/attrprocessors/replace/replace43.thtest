%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%CONTEXT
param.one = 'one!'
# ------------------------------------------------------------
%INPUT
<header th:replace="frag(var=${param.one[0]})">...</header>
%INPUT[frag]
<div th:fragment="header">
    <div th:text="${var}">...</div>
</div>
# ------------------------------------------------------------
%EXCEPTION org.thymeleaf.exceptions.TemplateProcessingException
%EXCEPTION_MESSAGE_PATTERN (.*)\Qforbidden in this context\E(.*)
