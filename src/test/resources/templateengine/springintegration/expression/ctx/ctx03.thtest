%EXTENDS ../../springintegration.common
# ------------------------------------------------------------
%CONTEXT
prices = #{ 'euros': 9.00,\
            'dollars': 12.00 }
product = #{ 'name': 'Lettuce',\
             'prices': prices }
# ------------------------------------------------------------
%INPUT
<div th:object="${product}">
  <p th:text="${#ctx.variables.product['name']}">...</p>
</div>
# ------------------------------------------------------------
%OUTPUT
<div>
  <p>Lettuce</p>
</div>
