%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%CONTEXT
bool = true
# ------------------------------------------------------------
%INPUT
<p th:text="${{'Hello'}} + ${{''}}">...</p>
<p th:text="${{'Hello'}} + ${{2}}">...</p>
<p th:text="|${{'Hello'}} ${{2}}|">...</p>
<p th:text="|${{'Hello'}} ${{bool}}|">...</p>
<p th:text="|${{'Hello'}} false|">...</p>
<p th:text="false">...</p>

<p th:text="${'Hello'} + ${''}">...</p>
<p th:text="${'Hello'} + ${2}">...</p>
<p th:text="|${'Hello'} ${2}|">...</p>
<p th:text="|${'Hello'} ${bool}|">...</p>
<p th:text="|${'Hello'} false|">...</p>
<p th:text="false">...</p>
# ------------------------------------------------------------
%OUTPUT
<p>Hello</p>
<p>Hello[2]</p>
<p>Hello [2]</p>
<p>Hello [true]</p>
<p>Hello false</p>
<p>false</p>

<p>Hello</p>
<p>Hello2</p>
<p>Hello 2</p>
<p>Hello true</p>
<p>Hello false</p>
<p>false</p>
