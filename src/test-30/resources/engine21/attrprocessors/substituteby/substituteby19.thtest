%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%INPUT
<div>
  <p>This is some text before</p>
  <div th:substituteby="templates/template-1 :: #f1 (msg='Message for you!',m2='oh!')">...</div>
  <p>This is some text after</p>
</div>
# ------------------------------------------------------------
%INPUT[templates/template-1]
<footer id="f1">
  <p th:text="${m2} + ' - ' + ${msg}">Here goes the message</p>
</footer>
# ------------------------------------------------------------
%OUTPUT
<div>
  <p>This is some text before</p>
  <footer id="f1">
    <p>oh! - Message for you!</p>
  </footer>
  <p>This is some text after</p>
</div>

