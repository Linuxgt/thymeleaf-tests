%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%INPUT
<div>
  <p>This is some text before</p>
  <div th:include="templates/template-1 :: frag-1 (msg='Message for you!')">...</div>
  <p>This is some text after</p>
</div>
# ------------------------------------------------------------
%INPUT[templates/template-1]
<footer th:fragment="frag-1(msg)">
  <p th:text="${msg}">Here goes the message</p>
</footer>
# ------------------------------------------------------------
%OUTPUT
<div>
  <p>This is some text before</p>
  <div>
    <p>Message for you!</p>
  </div>
  <p>This is some text after</p>
</div>

