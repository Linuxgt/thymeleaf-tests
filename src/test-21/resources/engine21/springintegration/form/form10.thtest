%TEMPLATE_MODE HTML5
# -----------------------------------------------------------
%MESSAGES
date.format = yyyy-MM-dd
# ------------------------------------------------------------
%CONTEXT
entity = new org.thymeleaf.engine21.springintegration.model.FormBean05()
entity.properties['alpha'] = 'one alpha'
entity.properties['beta'] = 'two beta'
columns = {'alpha','beta'}
# ------------------------------------------------------------
%INPUT
<form th:object="${entity}">
<div th:each="column : ${columns}">
  <input th:type="checkbox" th:field="*{properties['__${column}__']}" />
</div>
</form>
# ------------------------------------------------------------
%OUTPUT
<form>
<div>
  <input type="checkbox" id="properties&#39;alpha&#39;" name="properties[&#39;alpha&#39;]" value="one alpha" />
</div>
<div>
  <input type="checkbox" id="properties&#39;beta&#39;" name="properties[&#39;beta&#39;]" value="two beta" />
</div>
</form>
